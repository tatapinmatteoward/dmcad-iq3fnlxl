---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Resources - Digital Rights Law Group";
const pageDescription = "Access expert resources on digital rights, copyright protection, and legal guidance from the Digital Rights Law Group. Explore articles, guides, and tools to safeguard your online presence.";

const articles = [
  {
    title: "Understanding Fair Use in the Digital Age",
    excerpt: "Dive into what constitutes fair use and how it applies to your content. Explore real-world examples and legal precedents.",
    category: "Copyright Law",
    readTime: "5 min read"
  },
  {
    title: "Navigating DMCA Takedowns",
    excerpt: "A step-by-step guide to handling copyright infringement notices and protecting your digital assets.",
    category: "Legal Guidance",
    readTime: "7 min read"
  },
  {
    title: "Protecting Your Creative Work Online",
    excerpt: "Essential strategies to safeguard your intellectual property in the digital landscape.",
    category: "Content Protection",
    readTime: "6 min read"
  },
  {
    title: "Social Media Rights and Responsibilities",
    excerpt: "Understanding your rights when sharing content across social platforms.",
    category: "Digital Commerce",
    readTime: "4 min read"
  }
];

const tools = [
  {
    name: "Copyright Checklist",
    description: "Ensure your content complies with copyright standards.",
    icon: "fas fa-check-circle"
  },
  {
    name: "DMCA Response Guide",
    description: "Step-by-step instructions for responding to takedown notices.",
    icon: "fas fa-file-alt"
  },
  {
    name: "Fair Use Analyzer",
    description: "Evaluate your content against fair use criteria.",
    icon: "fas fa-scale-balanced"
  },
  {
    name: "Digital Rights Toolkit",
    description: "Comprehensive resources for protecting your online presence.",
    icon: "fas fa-toolbox"
  }
];

const categories = [
  { name: "Copyright Law", count: 12 },
  { name: "Legal Guidance", count: 8 },
  { name: "Content Protection", count: 15 },
  { name: "Digital Commerce", count: 7 }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="min-h-screen bg-gradient-to-br from-primary/5 to-accent/5">
    {/* Hero Section */}
    <section class="relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-primary to-accent opacity-10"></div>
      <div class="container mx-auto px-4 py-20 md:py-32 relative z-10">
        <div class="max-w-3xl">
          <span class="inline-block px-4 py-1 bg-accent/20 text-accent rounded-full text-sm font-medium mb-4">
            Expert Legal Guidance
          </span>
          <h1 class="text-4xl md:text-6xl font-bold text-primary mb-6 leading-tight">
            Resources for Digital Rights
          </h1>
          <p class="text-xl text-gray-700 mb-8 max-w-2xl">
            Access expert resources on digital rights, copyright protection, and legal guidance from the Digital Rights Law Group. Explore articles, guides, and tools to safeguard your online presence.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <button class="px-8 py-3 bg-primary text-white rounded-lg font-medium hover:bg-primary/90 transition-all duration-300 transform hover:-translate-y-1 shadow-lg">
              Browse Articles
            </button>
            <button class="px-8 py-3 bg-white text-primary border border-primary rounded-lg font-medium hover:bg-primary/10 transition-all duration-300">
              Download Guide
            </button>
          </div>
        </div>
      </div>
    </section>

    {/* Introduction Section */}
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-primary mb-6">Welcome to Our Resources Hub</h2>
          <div class="h-1 w-24 bg-accent mx-auto mb-8"></div>
          <p class="text-lg text-gray-700 leading-relaxed">
            At the <span class="font-bold text-primary">Digital Rights Law Group</span>, we believe knowledge is power when it comes to protecting your digital assets. Our resources page offers a curated collection of articles, guides, and tools designed to empower you with expert insights on digital rights and copyright law. Whether you're a content creator, business owner, or individual navigating the online world, these materials provide approachable, actionable advice.
          </p>
        </div>

        {/* Stats Cards */}
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          {[
            { value: "50+", label: "Resources Available" },
            { value: "10K+", label: "Monthly Readers" },
            { value: "95%", label: "Satisfaction Rate" },
            { value: "24/7", label: "Support Available" }
          ].map((stat, index) => (
            <div key={index} class="bg-gradient-to-br from-white to-gray-50 p-6 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-300">
              <div class="text-3xl font-bold text-primary mb-2">{stat.value}</div>
              <div class="text-gray-600">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Articles Section */}
    <section class="py-16 bg-gradient-to-br from-primary/5 to-accent/5">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">Educational Articles</h2>
          <p class="text-xl text-gray-700 max-w-2xl mx-auto">Stay informed with our latest thought leadership</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {articles.map((article, index) => (
            <div key={index} class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100">
              <div class="h-48 bg-gradient-to-r from-primary/20 to-accent/20 flex items-center justify-center">
                <i class="text-5xl text-primary/80 fas fa-book-open"></i>
              </div>
              <div class="p-6">
                <div class="flex justify-between items-start mb-3">
                  <span class="px-3 py-1 bg-accent/20 text-accent text-xs font-medium rounded-full">{article.category}</span>
                  <span class="text-gray-500 text-sm">{article.readTime}</span>
                </div>
                <h3 class="text-xl font-bold text-primary mb-3">{article.title}</h3>
                <p class="text-gray-700 mb-4">{article.excerpt}</p>
                <button class="text-accent font-medium hover:text-primary flex items-center">
                  Read More
                  <i class="fas fa-arrow-right ml-2 text-sm"></i>
                </button>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Tools & Resources */}
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">Tools & Resources</h2>
          <p class="text-xl text-gray-700 max-w-2xl mx-auto">Practical tools to help you protect your digital rights</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {tools.map((tool, index) => (
            <div key={index} class="text-center p-8 rounded-xl bg-gradient-to-br from-gray-50 to-white border border-gray-100 hover:border-accent/50 transition-all duration-300 hover:shadow-md">
              <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-6">
                <i class={`${tool.icon} text-2xl text-accent`}></i>
              </div>
              <h3 class="text-xl font-bold text-primary mb-3">{tool.name}</h3>
              <p class="text-gray-700 mb-4">{tool.description}</p>
              <button class="text-accent font-medium hover:text-primary">
                Access Tool
              </button>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Categories Section */}
    <section class="py-16 bg-gradient-to-r from-primary to-accent text-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Browse by Category</h2>
          <p class="text-xl text-primary/90 max-w-2xl mx-auto">Explore our collection by legal focus area</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {categories.map((category, index) => (
            <div key={index} class="bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/20 transition-all duration-300 border border-white/20">
              <h3 class="text-xl font-bold mb-2">{category.name}</h3>
              <p class="text-primary/90 mb-4">{category.count} resources</p>
              <button class="text-white bg-white/20 hover:bg-white/30 rounded-lg px-4 py-2 text-sm font-medium transition-colors duration-300">
                Explore
              </button>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* CTA Section */}
    <section class="py-20 bg-gradient-to-r from-primary to-accent text-white">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Protect Your Digital Rights?</h2>
        <p class="text-xl max-w-2xl mx-auto mb-10 text-primary-100">
          Join thousands of content creators and businesses who trust Digital Rights Law Group for expert guidance.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-white text-primary rounded-lg font-bold hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 shadow-lg">
            Get Started Today
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-white text-white rounded-lg font-bold hover:bg-white/10 transition-all duration-300">
            Schedule Consultation
          </button>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .hover\:translate-y-2:hover {
    transform: translateY(-2px);
  }

  .hover\:shadow-xl:hover {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
</style>